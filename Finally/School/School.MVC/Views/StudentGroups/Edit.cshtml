@model StudentGroupModel

@{
    ViewData["Title"] = "Group " + Model.Title;
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

}
<h1 class="text text-center alert-info">@(Model.Id == 0?"Создать новую группу" : "Изменить группу: ") <u> <i> @Model.Title</i> </u></h1>

@using (Html.BeginForm("Edit", "StudentGroups", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label asp-for="Title">Название группы</label>
        <input class="form-control" type="text" asp-for="Title" required />
    </div>

    <div class="form-group">
        <label asp-for="CourseId">Курс</label>
        <select class="form-control" asp-for="CourseId">
            <option value="">Выберите курс...</option>
            @foreach (var course in (List<CourseModel>)ViewBag.Courses)
            {
                if (course.Id == Model.CourseId)
                {
                    <option value="@course.Id" selected>@course.Title</option>
                }
                else
                {
                    <option value="@course.Id">@course.Title (@course.TopicName)</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<School.Core.Models.Enum.GroupStatus>()">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId">Учитель</label>
        <select class="form-control" asp-for="TeacherId">
            <option value="">Select teacher...</option>
            @foreach (var teacher in (List<TeacherModel>)ViewData["Teachers"])
            {
                if (teacher.Id == Model.TeacherId)
                {
                    <option value="@teacher.Id" selected>@teacher.LastName @teacher.FirstName</option>
                }
                else
                {
                    <option value="@teacher.Id">@teacher.LastName @teacher.FirstName</option>
                }
            }
        </select>
    </div>

    //--------------------------------Уроки текущеий группы-------------------------------------------------------------

    @if (Model.Id == 0)
    {

    }
    else
    {
<div class="form-group">
    <label asp-for="Lessons">Уроки группы</label>
    @if (Model.Lessons.Count() == 0)
    {
        <textarea rows="1" class="form-control" readonly>
@String.Format("У группы нет уроков!")
                    </textarea>
    }

    else
    {
<div class="form-group">    
        <textarea class="form-control" id="exampleFormControlTextarea1" readonly rows="@Model.Lessons.Count()">
            @for (int i = 0; i < Model.Lessons.Count(); i++)
                {
                @String.Format("Название урока - {0}, тема урока - {1} \n", Model.Lessons[i].NameLesson, Model.Lessons[i].TopicLesson)
                }
            </textarea>

</div>
    
    
       
    }
</div>
        //--------------------------------Уроки доступные для добавления в группу-------------------------------------------------------------

        <div class="form-group">
            <label asp-for="LessonId">Доступные уроки</label>
            <select class="form-control" asp-for="LessonId">
                <option value="">Выбрать новый урок...</option>
                @foreach (var lesson in (List<LessonModel>)ViewBag.Lessons)
                {
                   
                        <option value="@lesson.Id">@lesson.TopicLesson @lesson.NameLesson</option>
                }
            </select>
        </div>
    }


    //----------------------------------------Конец уроков-----------------------------------------------------

    @if (Model.Students != null)
    {
        <div class="form-group">
            <label asp-for="Students">Студенты группы</label>
            <table class="table table-borderless table-sm">

                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td><a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">@student.FullName</a></td>
                    </tr>
                }

                <tr>
                    <th>
                        <div class="text-info">Total: @Model.Students.Count()</div>
                    </th>
                </tr>
            </table>
        </div>

    }

    <div class="form-group">
        @if (ViewBag.IsAdmin)
        {
            <button type="submit" class="btn btn-success">Сохранить</button>
        }
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </div>
}