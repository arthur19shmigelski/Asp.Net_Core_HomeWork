@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.11.3/fc-4.0.1/sc-2.0.5/sb-1.3.0/sp-1.4.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/dt-1.11.3/fc-4.0.1/sc-2.0.5/sb-1.3.0/sp-1.4.0/datatables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>


<h1 class="text text-center alert-info"> <i>Список зарегестрированных в системе пользователей</i></h1>
<table id="sortingTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Логин пользователя</th>
            <th>Role user</th>
            <th>Действие</th>
        </tr>

    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var user in Model)
        {

            <tr>
                <td>@user.Email</td>
                <td>
                    @ViewBag.Roles[i] @{i = i + 1; }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Изменить роль</a>
                </td>
            </tr>
            //
        }
    </tbody>
    <tr>
        <th>
            <div class="text-info">Итого пользователей: @Model.Count()</div>
        </th>
        <th></th>
    </tr>
</table>