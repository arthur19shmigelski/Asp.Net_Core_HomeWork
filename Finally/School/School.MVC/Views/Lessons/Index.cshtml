@model IEnumerable<LessonModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

<h1 class="text text-center alert-info"> <i>Список наших уроков для @ViewBag.Topic</i></h1>

<body>
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>Тема урока</th>
                <th>Название урока</th>
                <th>Группа</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() == 0)
            {
            <tr>
                <td colspan="5" class="text-center">Уроков для данной темы нету!</td>
            </tr>
            }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.TopicLesson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameLesson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Title)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">
                                Изменить
                            </a>
                            <button type="submit" class="btn btn-outline-warning">
                                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                            </button>
                        </td>
                    </tr>
                }
        </tbody>
        <tr>
            <th>
                <div class="text-info">Итого уроков: @Model.Count()</div>
            </th>
        </tr>
    </table>
    <p>
        <a asp-action="Edit" class="btn btn-success">Добавить новый урок</a>
    </p>
</body>
